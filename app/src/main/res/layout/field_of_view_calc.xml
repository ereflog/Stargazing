<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".FieldOfViewCalc">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <LinearLayout
                style="@style/BorderParam">

                <LinearLayout
                    style="@style/horizontalLinearLayoutParam">

                    <TextView
                        style="@style/TextParameter.Name"
                        android:text="Eyepiece FOV" />

                    <Space
                        style="@style/Spacing"/>

                    <EditText
                        style="@style/TextParameter.InputNumber"
                        android:id="@+id/et_eyepiece_fov"
                        android:hint="deg" />

                    <TextView
                        style="@style/TextParameter.Unit"
                        android:text="°"
                        android:textSize="28sp"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/horizontalLinearLayoutParam">

                    <TextView
                        style="@style/TextParameter.Name"
                        android:text="Eyepiece F Length" />

                    <Space
                        style="@style/Spacing"/>

                    <EditText
                        style="@style/TextParameter.InputNumber"
                        android:id="@+id/et_eyepiece_focal_length1"
                        android:hint="mm" />

                    <TextView
                        style="@style/TextParameter.Unit"
                        android:text="mm" />

                </LinearLayout>

                <LinearLayout
                    style="@style/horizontalLinearLayoutParam" >

                    <TextView
                        style="@style/TextParameter.Name"
                        android:text="Telescope F Length" />

                    <Space
                        style="@style/Spacing" />

                    <EditText
                        style="@style/TextParameter.InputNumber"
                        android:id="@+id/et_telescope_focal_length1"
                        android:hint="mm" />

                    <TextView
                        style="@style/TextParameter.Unit"
                        android:text="mm" />

                </LinearLayout>

                <LinearLayout
                    style="@style/horizontalLinearLayoutParam" >

                    <TextView
                        style="@style/TextParameter.Name"
                        android:text="Actual Field of View" />

                    <Space
                        style="@style/Spacing" />

                    <EditText
                        style="@style/TextParameter.Result"
                        android:id="@+id/et_actual_fov" />

                    <TextView
                        style="@style/TextParameter.Unit"
                        android:text="°"
                        android:textSize="28sp"/>

                </LinearLayout>

                <Button
                    style="@style/ButtonParam"
                    android:id="@+id/btn_true_fov"
                    android:text="Calculate True FOV" />

            </LinearLayout>

            <TextView
                style="@style/TextSubTitle.Body"
                android:text="   True Field of View   " />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>