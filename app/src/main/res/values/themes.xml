<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Stargazing" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/taupe</item>
        <item name="colorPrimaryVariant">@color/deep_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/blush</item>
        <item name="android:navigationBarColor">@color/deep_purple</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Stargazing.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>3

    <style name="Theme.Stargazing.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Stargazing.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextTitle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextSubTitle">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextParameter">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextTitle.Name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSubTitle.Body">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@color/blush</item>
    </style>

    <style name="TextParameter.Name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextParameter.InputNumber">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="TextParameter.InputDecimal">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="TextParameter.Unit">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextParameter.Result">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">none</item>
        <item name="android:hint">"Result"</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="ButtonParam">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/indigo</item>
    </style>

    <style name="BorderParam">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="Spacing">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
